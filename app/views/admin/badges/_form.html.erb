<%= form_with model: [:admin, @badge], html: {id:"new_badge"} do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :img_url %>
    <%= form.text_field :img_url %>
  </div>

  <div class="field rule-select">
    <%= form.label :rule %>
    <%= form.select :rule, Badge.rules.keys.map { |rule| t(rule) } %>
  </div>

  <div class="field">
    <%= form.label :rule_value %>
    <%= form.text_field :rule_value %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
