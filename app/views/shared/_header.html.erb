<div class="header">
  <div class="project_name">
    <h1><%= link_to 'Test Guru', root_path %></h1>
  </div>
  <% if logged_in? %>
    <div class="nav user">Welcome, <b><%= current_user.name %></b> Guru
     <%= button_to 'Exit', logout_path, method: :delete %></div>
  <% else %>
    <div class="nav user">
      <%= button_to 'Sign in', login_path, method: :get %>
      <%= button_to 'Sign up', signup_path, method: :get %>
    </div>
  <% end %>
</div>